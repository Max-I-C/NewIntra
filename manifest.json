{
  "manifest_version": 3,
  "name": "New Intra",
  "version": "1.1",
  "description": "Upgrading the intra of 42",

  "content_scripts": [
    {
      "matches": ["https://profile-v3.intra.42.fr/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],

  "host_permissions": [
    "https://projects.intra.42.fr/*"
  ],

  "icons": {
    "16": "icons/16.png"
  }
}
